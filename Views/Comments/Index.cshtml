@using GetFit.Classes;
@using GetFit.Models;


@{
    ViewBag.Title = "Index";
}

@model IEnumerable<GetFit.Models.Comment>


<h2 class="title">Коментари</h2>

<p>
    @Html.ActionLink("Създай нов", "Create")
</p>
<table class="table">
    <tr class="title">
        <th>
         Коментар:
        </th>
    </tr>

@foreach (var item in Model) {
    
    <tr>
        @*@if(Comment.Id == Post.Id)*@
        <td>
            @Html.DisplayFor(modelItem => item.Text)
        </td>
        <td>
            @Html.ActionLink("Добави", "Edit", new { id=item.Id }) |
            @Html.ActionLink("Детайли", "Details", new { id=item.Id }) |
            @Html.ActionLink("Изтрий", "Delete", new { id=item.Id })
        </td>
    </tr>
}

</table>
