@using GetFit.Classes;
@using GetFit.Models;


@{
    ViewBag.Title = "Home Page";
}




    @model List<GetFit.Models.Post>
<body>
    <form id="form1">
           <div>
                @*<a href="#"><img src="~/Content/images.jpg" alt="Insert Logo Here" width="100%" id="Insert_logo" style="background: #C6D580; display:block;" /></a>*@
               <div>
 
                 ***********************
               </div>
                <section>
                    @foreach (var post in Model)
                    {
                        <article class="post col-md-6">
                            <h2 class="title"><a href="/Posts/Details/@post.Id">@post.Title</a></h2>
                            <div class="about">
                               <i> Публикувано
                                на @post.Date</i>
                                @if (post.Author != null)
                                {
                                    @: от
                                    <i>@post.Author.FullName (@post.Author.UserName)</i>
                                }

                            </div>
                            <div class="body">@Html.Raw(Utils.CutText(post.Body))</div>
                            
                        </article>
                    }
                </section>

            </div>
      
    </form>
</body>
