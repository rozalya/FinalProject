@model GetFit.Models.Post

@{
    ViewBag.Title = "Edit";
}

<h2 class="title">Добави</h2>


@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    
    <div class="form-horizontal">
        <h4>Статия</h4>
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        @Html.HiddenFor(model => model.Id)

        <div class="form-group">
            <dt class="control-label col-md-2">Име</dt>
            <div class="col-md-10">
                @Html.EditorFor(model => model.Title, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.Title, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            <dt class="control-label col-md-2">Тяло</dt>
            <div class="col-md-10">
                @Html.EditorFor(model => model.Body, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.Body, "", new { @class = "text-danger" })
            </div>
        </div>
        <div class="form-group">
            <dt class="control-label col-md-2">Автор</dt>
            <div class="col-md-10">
               <select name="Author_Id">
                   @foreach (var author in ViewBag.Authors)
                   {
                    <option value="@author.Id">@author.UserName</option>
                   }
                 </select>
                @Html.ValidationMessageFor(model => model.Author, "", new { @class = "text-danger" })
            </div>
        </div>
        
        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Save" class="btn btn-default" />
            </div>
        </div>
    </div>
}

<div>
    @Html.ActionLink("Обратно в списъка", "Index")
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
